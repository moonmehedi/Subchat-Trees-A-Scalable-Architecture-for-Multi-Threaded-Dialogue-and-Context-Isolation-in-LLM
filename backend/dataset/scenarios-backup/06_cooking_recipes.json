{
  "scenario_name": "Cooking Recipes & Techniques",
  "description": "Tests retrieval of specific recipe details and cooking methods",
  "tree_type": "main",
  "conversations": [
    {
      "step": 1,
      "action": "send_message",
      "node_type": "main",
      "message": "I have a secret recipe for chocolate chip cookies that's been in my family for 3 generations",
      "expected_response_contains": ["chocolate chip", "cookies", "recipe", "family"]
    },
    {
      "step": 2,
      "action": "send_message",
      "node_type": "main",
      "message": "The secret ingredient is brown butter and a pinch of sea salt",
      "expected_response_contains": ["brown butter", "sea salt", "secret"]
    },
    {
      "step": 3,
      "action": "send_message",
      "node_type": "main",
      "message": "I bake them at exactly 350°F for 12 minutes until golden brown",
      "expected_response_contains": ["350", "12 minutes", "golden brown"]
    },
    {
      "step": 4,
      "action": "send_message",
      "node_type": "main",
      "message": "I also make the best lasagna with 5 different cheeses",
      "expected_response_contains": ["lasagna", "5", "cheeses"]
    },
    {
      "step": 5,
      "action": "send_message",
      "node_type": "main",
      "message": "My lasagna uses ricotta, mozzarella, parmesan, provolone, and romano cheese",
      "expected_response_contains": ["ricotta", "mozzarella", "parmesan"]
    },
    {
      "step": 6,
      "action": "send_message",
      "node_type": "main",
      "message": "I layer it 4 times and bake for 45 minutes covered, then 15 minutes uncovered",
      "expected_response_contains": ["4 times", "45 minutes", "15 minutes"]
    },
    {
      "step": 7,
      "action": "send_message",
      "node_type": "main",
      "message": "My signature dish is Thai green curry with chicken and bamboo shoots",
      "expected_response_contains": ["Thai green curry", "chicken", "bamboo"]
    },
    {
      "step": 8,
      "action": "send_message",
      "node_type": "main",
      "message": "I use 2 tablespoons of green curry paste and coconut cream, not milk",
      "expected_response_contains": ["2 tablespoons", "curry paste", "coconut cream"]
    },
    {
      "step": 9,
      "action": "send_message",
      "node_type": "main",
      "message": "What's the secret ingredient in my chocolate chip cookies?",
      "expected_response_contains": ["brown butter", "sea salt"],
      "should_retrieve": true,
      "expected_retrieval": ["brown butter", "sea salt"]
    },
    {
      "step": 10,
      "action": "send_message",
      "node_type": "main",
      "message": "How many cheeses do I use in my lasagna?",
      "expected_response_contains": ["5", "five"],
      "should_retrieve": true,
      "expected_retrieval": ["5 different cheeses"]
    },
    {
      "step": 11,
      "action": "send_message",
      "node_type": "main",
      "message": "What temperature do I bake cookies at?",
      "expected_response_contains": ["350"],
      "should_retrieve": true,
      "expected_retrieval": ["350°F"]
    },
    {
      "step": 12,
      "action": "send_message",
      "node_type": "main",
      "message": "What's my signature dish?",
      "expected_response_contains": ["Thai green curry"],
      "should_retrieve": true,
      "expected_retrieval": ["Thai green curry"]
    }
  ]
}
